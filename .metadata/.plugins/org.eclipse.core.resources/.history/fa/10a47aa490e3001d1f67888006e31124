package logica.exercicios.aula06;

import javax.swing.JOptionPane;

public class Exercicio10 {

	public static void main(String[] args) {
		
		double salario = Double.parseDouble(JOptionPane.showInputDialog(null, "Digite o valor do seu sal√°rio"));
		double calc = 0;
		if (salario <=280 ) {
			calc = (salario*0.20)/salario;
			 JOptionPane.showMessageDialog(null, "O valor do seu salario "+salario+", sofreu um aumento de 20% e ficou "+calc);
		}
	}

}
