package logica.exercicios.aula06;

import javax.swing.JOptionPane;

public class Exercicio11 {

	public static void main(String[] args) {
		
		int codOrigem = Integer.parseInt(JOptionPane.showInputDialog(null,"Digite o código do estado da carga :\n"
				+ "1)SP - São Paulo\n"
				+ "2)RJ - Rio de Janeiro\n"
				+ "3)DF - Distrito Federal\n"
				+ "4)CE - Ceará\n"
				+ "5)ES - Espírito Santo"));
		
		double peso = Double.parseDouble(JOptionPane.showInputDialog(null,"Digite o peso da carga em toneladas :"));
		int codCarga = Integer.parseInt(JOptionPane.showInputDialog(null,"Digite o código da carga (10 à 40) :"));
		peso = peso*1000;
		
		if(codOrigem >= 10 && codOrigem <= 20) {
			JOptionPane.showMessageDialog(null,"O valor da carga é: "+peso*100);
		}else if(codOrigem >20 && codOrigem <=30) {
			JOptionPane.showMessageDialog(null,"O valor da carga é: "+peso*250);
		}else if(codOrigem >31 && codOrigem <=40) {
			JOptionPane.showMessageDialog(null,"O valor da carga é: "+peso*340);
		}else{
			JOptionPane.showMessageDialog(null,"Opção Inválida");
		}
	
	
	
	
	
	
	}

}
